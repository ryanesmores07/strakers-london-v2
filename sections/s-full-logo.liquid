<style>
.logo {
  max-width: 200px;
  margin-top: 100px;
}
.no-margin-top {
  margin-top: 0 !important;
}
.no-margin-top .container img{
  margin-left: auto;
  margin-right: auto;
  display: block;
}
.centered-text {
  margin-left: auto;
  margin-right: auto;
  display: block;
  text-align: center;
}
</style>

<section class="s-image-wrapper no-margin-top">
  <div class="container">
      <img class="logo" src="{{section.settings.image | img_url: '1024x'}}">
      <p class="centered-text">Please drink responsibly.</p>
  </div>
</section>

{% schema %}
{
  "name": "Strakers Full Image",
  "tag": "section",
  "class": "about-text-small",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Strakers Full Logo",
      "category": "Strakers"
    }
  ]
}
{% endschema %}
