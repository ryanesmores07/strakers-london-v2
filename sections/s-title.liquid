<section class="s-title-area-container">
  <div class="container">
    <div class="s-title-area">
      <h1>{{section.settings.title-block}}</h1>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Strakers Title Block",
  "tag": "section",
  "class": "title-text",
  "settings": [
    {
      "type": "textarea",
      "id": "title-block",
      "label": "Title",
      "default": "We are Strakers"
    }
  ],
  "presets": [
    {
      "name": "Strakers Title Block",
      "category": "Strakers"
    }
  ]
}
{% endschema %}
